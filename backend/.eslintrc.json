{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "ts": "never"
            }
          ],
        "prettier/prettier": "error",
        "class-methods-use-this": "off",
        "@typescript-eslint/camelcase": "off",
        "camelcase": "off",
        // Var que for igual _ ser√° ignorado o erro
        "@typescript-eslint/no-unused-vars": ["error", {
          "argsIgnorePattern": "_"
        }]
    },
    "settings": {
        "import/resolver": {
          "typescript": {}
        }
      }
}
